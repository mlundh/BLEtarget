#ifndef I2C_SLAVE_H_
#define I2C_SLAVE_H_

#include "app.h"

typedef struct
{
   volatile uint8_t ready_to_answer;
   volatile uint8_t ready_to_write;
   I2C_HandleTypeDef *i2c_handler;
 }i2c_t;



int i2c_slave_init(I2C_HandleTypeDef *hi2c);
void i2c_slave_check_timeout(void);


#endif /* I2C_SLAVE_H_ */
